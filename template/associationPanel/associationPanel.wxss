.panel {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-bottom: 2rpx solid #f0f0f0;
}

.panelLeft {
  display: flex;
  flex-direction: row;
}

.panelImage {
  width: 80rpx;
  height: 80rpx;
}

.panelLeft >view {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  justify-content: center;
  margin-left: 50rpx;
}


.panelLeft >view>text:nth-child(2) {
  color: #a9a9a9;
}
.panelRight{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.panelRightImage{
  width: 50rpx;
  height: 50rpx;
}
.panelRightImage2{
  width: 70rpx;
  height: 70rpx;
  margin-left: 40rpx;
}