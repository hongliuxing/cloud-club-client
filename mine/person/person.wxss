.summary {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 80rpx;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 10rpx;
  border: 10rpx solid #dbdbdb;
}

.input {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #ededed;
  margin: 20px 30rpx;
}

input {
  font-size: 24rpx;
  color: #808080;
}

.input .font {
  display: flex;
  flex: 1;
}

.name {
  width: 200rpx;
  font-size: 28rpx;
  color: #808080;
  letter-spacing: 10px;
  font-weight: bold;
  padding-bottom: 8rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  text-align: center;
  margin-right: 10px;
}

.font {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: flex-end;
}
.more{
  width:20px;
  height:20px;
}
.bottomBtn {
  padding-bottom: 5rpx;
  box-sizing: border-box;
}

.code {
  letter-spacing: 3px;
  text-align: right;
  margin-left: -10rpx;
}


button::after {
  border: none;
}

input {
  outline: none;
  border: none;
  list-style: none;
}
.sexBtn{
  width: 180rpx;
  text-align: right;
}
button {
  padding: 0;
  margin: 0;
  width: 180rpx;
  background: #fff;
  border: 1px solid #66d6d7;
  height: 25px;
  font-size: 20rpx;
  line-height: 25px;
  color: #66d6d7;
}
.bottom{
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top:80rpx;
}
.btn{
  border-radius: 10rpx;
  color:#fff;
  letter-spacing: 8px;
  box-sizing: border-box;
}

