page {
  background: #f9f9f9;
}

.listItem {
  display: flex;
  flex:1;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  width: 100%;
}

.content {
  background: #fff;
  border-radius: 10rpx;
  width: 100%;
  height: 330rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  flex:1;
}
.title{
  text-align: center;
  display: inline-block;
  width: 100%;
  font-size: 28rpx;
  color:#5f5c5d;
  font-weight: bold;
  letter-spacing: 2px;
}
.context{
  width: 100%;
  height: 200rpx;
  padding:30rpx;
  box-sizing: border-box;

  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
    word-break:break-word;
}

.time {
  color: #a8a8a8;
  font-size: 24rpx;

}


.more{
  display: flex;
  flex:1;
  border-top: 2rpx dotted #f0f0f0;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color:#c4c2c2;
  letter-spacing: 2px;
}