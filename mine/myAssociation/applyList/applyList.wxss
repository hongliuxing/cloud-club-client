@import "../../../template/applyList/applyList.wxss";
page{
  background: #f9f9f9;
}
.table{
  border: 0 !important;
}
.list{
  margin-top: 40rpx;
}
.modal{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .4);
  position: absolute;
  top:0;
  left: 0;
  z-index: 10001;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal_con{
  width:80%;
  height:500rpx;
  background: #fff;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  transform: translateY(-300rpx)
}
textarea{
  width: 100%;
  height: 300rpx;
  border:2rpx solid #f0f0f0;
  padding: 10rpx;
  box-sizing: border-box;
  letter-spacing: 2px;
  font-size: 28rpx;
  color:#a8a8a8;
  line-height: 35rpx;
}
.bottom{
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;

}
.bottom >view{
  width: 180rpx;
  height:60rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
  background: #fafafa;
}
.bottom >view:active{
  opacity: 0.8;
}
.titleCase{
  display: inline-block;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.bottom >view:nth-child(1){
  margin-right: 30rpx;
  color:#f61612;
}
.bottom >view:nth-child(2){
  color:#3396fb;
}