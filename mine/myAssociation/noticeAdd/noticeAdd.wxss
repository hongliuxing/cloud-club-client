.body {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.image {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 50rpx;
  width: 100%;
}

.image_left {
  display: flex;
  flex-direction: column;
}

.image_right {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-top: 20rpx;
  padding:0 30rpx;
  box-sizing: border-box;
}
.card {
  width: 200rpx;
  text-align: left;
  font-size: 28rpx;
  color: #a8a8a8;
  font-weight: bold;
  letter-spacing: 8px;
  padding-left: 30rpx;
}

.bottom {
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top:200rpx;
}

.btn {
  border-radius: 10rpx;
  color: #fff;
  letter-spacing: 8px;
  box-sizing: border-box;
}

.border {
  border: 2rpx solid #b9b9b9;
}

.titles {
  padding-left: 30rpx;
  font-size: 28rpx !important;
}

._input-class {
  font-weight: normal !important;
  font-size: 28rpx !important;
}

textarea {
  width: 100%;
  height: 400rpx;
  border: 2rpx solid #b9b9b9;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  color:#a8a8a8;
  letter-spacing: 2px;
}
