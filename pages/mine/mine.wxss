page{
  background: #f9f9f9;
}
.bg{
  height: 360rpx;
  width: 100%;
  background: #38bfbb;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.con{
  position: absolute;
  width: 85%;
  background: #fff;
  height: 380rpx;
  top:80rpx;
  border-radius:10rpx;
  box-shadow:0 2px 10px #b9b9b9;
}
.person{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header{
  width: 150rpx;
  height: 150rpx;
  border: 5rpx solid #fff;
  margin-top: -75rpx;
  border-radius: 50%;
}
.name{
  font-size: 26rpx;
  color:#999;
  letter-spacing: 1px;
  margin-top: 10rpx;
}
.editInfo{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.editInfo >text{
  font-size: 20rpx;
  color:#b6b6b6;
}
.more{
  height: 30rpx;
  width:30rpx;
  margin-left: 15rpx;
}

.schoolInfo{
  display: flex;
  flex-direction: row;
  flex:1;
  margin-top: 50rpx;
}
.schoolInfo >view{
  display: flex;
  flex:1;
  flex-direction: column;
  align-items: center;
}
.schoolInfo >view > .title{
  font-size: 22rpx;
  color:#999;
}
.value{
  color:#38bfbb;
  font-size: 22rpx;
  margin-top: 20rpx;
  text-align: center;
}
.icon{
  height: 60rpx !important;
  width: 60rpx !important;
  margin-left: -10rpx;
}
.titleName{
  margin-left:-10rpx !important;
}
.goto{
  margin-top: 100px;
}