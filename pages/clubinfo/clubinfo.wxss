/* pages/clubinfo/clubinfo.wxss */
.container{
    height: 100%;
    margin-bottom: 150rpx;
}
/* 顶部 */
.topbox{
    width: 100%;
    height: 170rpx;
    background-color: #1DA1F2;
}
.club-logo{
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    position: absolute;
    margin-top: calc(170rpx - (130rpx / 2));
    margin-left: 30rpx;
    /* box-shadow: #666 0px 0px 10px; */
}
/* 社团部分 */
.clubbox{
    width: 100%;
    margin-top: 70rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
}
.attent-box{
    width: 100%;
    /* overflow: hidden; */
}
.attent-btn{
    /* width: 120rpx; */
    height: 60rpx;
    line-height: 60rpx;
    /* border-radius: 30rpx; */
    float: right;
    font-size: 25rpx;
}
.club-title{
    font-weight: 600;
    font-size: 40rpx;
}
.club-school{
    font-size: 30rpx;
    color: rgb(96, 106, 128);
    margin-bottom: 20rpx;
}
.club-intro{
    font-size: 33rpx;
    letter-spacing: 2rpx;
    word-break:break-all;
}
.club-stat{
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
}
.cstat-item{
    font-size: 30rpx;
    color: rgb(96, 106, 128);
    margin-right: 15rpx;
}
.cstat-item-num{
    color: #555;
    margin-right: 10rpx;
}

/** middlebox 标签页部分 **/
.middlebox{
    margin-top: 20rpx;
}
.album-list{
    padding: 10rpx 0;
}
.album-pic{
    width: 100%;
    margin-bottom: 10rpx;
}