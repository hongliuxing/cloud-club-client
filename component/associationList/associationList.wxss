.listItem {
  width: 100%;
  background: #fff;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.context {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.leftContext {
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.leftContext>text {
  display: inline-block;
}
.border{
  border:2rpx solid #b7b7b7;
}
.name {
  font-size: 28rpx;
  color: #4c5257;
  font-weight: bold;
}

.name::before {
  color: #818285;
  content: "社团名称:";
  margin-right: 10rpx;
}

.time {
  color: #b7b7b7;
  font-size: 26rpx;
}

.status {
  font-size: 24rpx;
  letter-spacing: 2px;
}
.padd{
  padding-right:50rpx;
}
.imagePadd{
  padding: 0 50rpx;
}


/**状态判断**/
