<wxs src="../../app.wxs" module="util" />
<view class='listItem item-class'>
  <view class='listItem_left'>
    <image src="{{imageUrl}}" class='image'></image>
    <view>
      <text class='title'>{{title}}</text>
      <text class='time'>{{util.formateTime(createdAt)}}</text>
      <text class='per case' wx:if="{{!btn && struts==-2}}">{{checked_fail_reason}}</text>
      <text class='per plac' wx:if="{{!btn && struts==-1}}" >000</text>
      <text class='per' wx:if="{{btn}}">{{author}}</text>
    </view>
  </view>
  <view class='listItem_right' wx:if="{{btn}}">
    <view class='btn' wx:if="{{!isAuthor}}">
      查看
    </view>
    <view class='btn edit' wx:if="{{isAuthor}}">
      编辑
    </view>
  </view>

  <view class='listItem_right' wx:if="{{!btn}}">
    <text class='apply' wx:if="{{struts==-1}}">申请中</text>
    <view class='right_text'wx:if="{{struts==-2}}">
      <text class='apply refuse'>已拒绝</text>
      <text class='apply refuse'>点击撤回</text>
    </view>
  </view>
</view>